# Environment variables for secure deployment
# Copy this file to .env and customize the values

# Database password for the history_user (required)
HISTORY_PASSWORD=change_me_to_a_secure_password

# Web UI authentication (required when AUTH_ENABLED=true)
AUTH_USERNAME=admin
AUTH_PASSWORD=change_me_to_a_secure_password

# Optional: API keys for programmatic access (comma-separated)
# AUTH_API_KEYS=key1,key2

# Optional: Additional patterns for sensitive data redaction (comma-separated)
# REDACT_PATTERNS=custom.secret,my.setting
